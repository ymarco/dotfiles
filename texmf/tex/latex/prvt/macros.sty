% Marco's Macros

\ProvidesPackage{macros}

% Parentheses to their many kinds
\newcommand{\abs}[1]{\left|#1\right|}   % absolute value |a|
\newcommand{\bpa}[1]{\left[#1\right)}   % closed-open interval [a, b)
\newcommand{\bra}[1]{\left[#1\right]}   % brackets [a]
\newcommand{\bre}[1]{\left\{#1\right\}} % braces {a}
\newcommand{\set}[1]{\bre{#1}} % alias, sometimes 'set' is more readable
\newcommand{\norm}[1]{\left\Vert #1 \right\Vert}
\newcommand{\pa}[1]{\left(#1\right)}    % parentheses (a)
\newcommand{\pba}[1]{\left(#1\right]}   % open-closed interval (a, b]
\newcommand{\anb}[1]{\left\langle #1 \right\rangle} % angle brackets <a,b>
\newcommand{\ceil}[1]{\left\lceil #1 \right\rceil}
\newcommand{\floor}[1]{\left\lfloor #1 \right\rfloor}


% Standard Sets
\newcommand{\RR}{\mathbb{R}}
\newcommand{\QQ}{\mathbb{Q}}
\newcommand{\ZZ}{\mathbb{Z}}
\newcommand{\CC}{\mathbb{C}}
\newcommand{\NN}{\mathbb{N}}
\newcommand{\NE}{\NN_{\text{even}}}
\newcommand{\NO}{\NN_{\text{odd}}}

% Useful
\newcommand{\rtr}{\RR\to\RR}
\newcommand{\itr}{I\to\RR}

\newcommand{\half}[1]{\frac{#1}{2}}   % x/2
\newcommand{\halff}{\frac{1}{2}}      % 1/2

\newcommand{\oner}[1]{\frac{1}{#1}}   % 1/x
\newcommand{\eqc}[1]{\overset{#1}{=}} % equality cause
