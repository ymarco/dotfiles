#!/bin/sh
cd ~ || exit 1
EXTS="-e pdf -e md -e markdown -e org -e epub -e doc -e docx -e mp4 -e mkv -e wmv -e webm -e png -e cbz -e djvu"
fd . -t f $EXTS \
    | sed 's|/|❭|g' \
    | rofi -dmenu -i -theme-str 'textbox-icon {str: "    ";} prompt {enabled: false;}' \
    | sed 's|❭|/|g' \
    | xargs -d '\n' -r xdg-open
