#!/bin/sh
alias \
	ka="killall" \
	ls="ls -hN --color=auto --group-directories-first" \
	diff="diff --color=auto" \
	wifish="wifish -i wlp2s0"\
	c="clear"\
	config="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"\
	vim="nvim"\
	v="vim"\
	ec="edit-config"\
	grep="grep --color=auto"\
	rand-bg="feh --randomize --bg-fill ~/.wallpapers/*"\
	idea="export _JAVA_AWT_WM_NONREPARENTING=1 && idea &"

	
# search in bash history
hs(){
	sort -u $HOME/.bash_history | fzf  --tac --no-sort --print0 | xclip -selection cilpboard 
}

# prepare package from AUR for installation
pac-aur() {
	cd ~/desk
	git clone https://aur.archlinux.org/$1.git &&
	cd $1 &&
	makepkg -Acsf
}

# get preformance info about a process
pinfo(){
	ps axch -o cmd,%cpu,%mem | fzf --header "PROCESS                      CPU  MEM" > /dev/null
}
lbar(){
	wd="$(pwd)"
	cd ~/desk/lemonbarc/
	./run.sh &
	cd "$wd"
}

