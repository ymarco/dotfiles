#!/bin/sh
alias \
	ka="nocorrect killall" \
	ls="ls -hN --color=auto --group-directories-first" \
	diff="diff --color=auto" \
	wifish="wifish -i wlp2s0"\
	config="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"\
	vim="nvim"\
	v="vim"\
	ec="edit-config"\
	grep="grep --color=auto"\
	rand-bg="feh --randomize --bg-fill ~/.wallpapers/*"\
	idea="export _JAVA_AWT_WM_NONREPARENTING=1 && idea &"\
	n="nnn"

# SHORTCUTS
alias \
	y="~/Dropbox/yoav"\
	d="~/desk"\
	D="~/Downloads"

	
# search in bash history
hs() {
	sort -ubi ~/.bash_history | fzy | xargs printf | xclip -selection cilpboard 
}

# prepare package from AUR for installation
pac-aur() {
	cd ~/desk
	git clone https://aur.archlinux.org/$1.git &&
	cd $1 &&
	makepkg -Acsf
}

# get preformance info about a process
pinfo() {
	ps axch -o cmd,%cpu,%mem | fzf --header "PROCESS                      CPU  MEM" > /dev/null
}
lbar() {
	wd="$(pwd)"
	cd ~/desk/lemonbarc/
	./run.sh &
	cd "$wd"
}

lbar-kill() {
	ka lemonbarc lemonbar
}
lbar-restart() {
	lbar-kill
	lbar
}

chtheme(){
cd ~/.gvcci/themes/$1/
xrdb xresources-colors.txt
xrdb -merge <(echo \*.font: Monospace-14)
xrdb -merge <(echo \*.alpha: 200)
sleep 4
feh --bg-scale wallpaper
}
